    text_colour = (text_r,text_g,text_b),
    back_colour = (BG_r,BG_g,BG_b),
    scroll_speed = speed)
    prompter = input("Play again? Type 'Yes' or 'No':")
    prompt = prompter.upper() 
    
    if prompt == "YES":
      x = True
      continue
    
    else:
      x = False
      print ("Thank you for playing")
      for i in range(100):
        time.sleep(1.0)
        print ("You may now exit the program")
        time.sleep(2.0)
        print ("Goodbye")
else:
    for i in range(100):
        print ("Thank you for playing")
