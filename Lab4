            text_b = int(input("Your Blue colour of your message:"))
          
            if text_b > 255 or text_b < 0:
                print ("MAKE SURE NONE OF YOUR VALUES GO BELOW 0 or ABOVE 255")
                x = True
                time.sleep(0.5)
                print ("Restarting...")
                time.sleep(1)
                continue  
            BG_r = int(input("Your Background Red colour of your message:"))
